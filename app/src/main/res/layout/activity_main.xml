<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.codieshare.MainActivity">

    <LinearLayout
        android:id="@+id/group_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="#5500ff00"
            android:text="Camera" />

        <Button
            android:id="@+id/btn_gallery"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="#99115599"
            android:text="Gallery" />

        <Button
            android:id="@+id/btn_board"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="#ffff2211"
            android:text="Board" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:background="#ff11ff22"
            android:text="Settings" />




    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_btns"></android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>
